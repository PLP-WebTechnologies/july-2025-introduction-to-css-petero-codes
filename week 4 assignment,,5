def modify_file_content(content, choice):
    """
    Modify the file content based on user choice.
    """
    if choice == "1":
        return content.upper()
    elif choice == "2":
        return content.lower()
    elif choice == "3":
        return content[::-1]  # reverse text
    else:
        return content  # no change if invalid choice


def main():
    filename = input("Enter the filename to read: ")

    try:
        # Try reading the file
        with open(filename, "r") as file:
            content = file.read()

        # Ask user how to modify the file
        print("\nChoose a modification:")
        print("1. Convert to UPPERCASE")
        print("2. Convert to lowercase")
        print("3. Reverse text")
        choice = input("Enter your choice (1/2/3): ")

        # Modify content
        modified_content = modify_file_content(content, choice)

        # Write to new file
        new_filename = "modified_" + filename
        with open(new_filename, "w") as new_file:
            new_file.write(modified_content)

        print(f"\n✅ File has been modified and saved as '{new_filename}'")

    except FileNotFoundError:
        print(f"❌ Error: The file '{
